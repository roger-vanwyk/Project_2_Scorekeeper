<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ScoreKeeper" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">@color/btnColor</item>
    </style>
    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/button_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/button_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/button_vertical_margin</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="TeamTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">@dimen/team_title_padding</item>
        <item name="android:textColor">@color/team_title_color</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="ScoreTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_weight">2</item>
        <item name="android:paddingBottom">@dimen/score_padding</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">56sp</item>
    </style>
    <style name="WicketTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingBottom">@dimen/score_padding</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textSize">32sp</item>
    </style>
</resources>